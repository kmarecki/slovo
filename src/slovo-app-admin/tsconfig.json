{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "allowJs": false,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "@core/*": ["../slovo-app-core/*"],
            "@services/*": ["./services/*"],
            "@shared/*": ["../slovo-shared/*"]
        },
        "lib": ["dom", "es5", "scripthost", "es2015.promise", "es2015.symbol"]
    },
    "include": ["./**/*"]
}
